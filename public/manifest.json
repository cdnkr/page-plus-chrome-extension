{
    "manifest_version": 3,
    "name": "Page+",
    "version": "1.0.0",
    "description": "On-device AI analysis and actions on web pages. Powered by Google's in-browser AI APIs.",
    "action": {
      "default_title": "Click to open side panel"
    },
    "side_panel": {
      "default_path": "sidepanel.html"
    },
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "permissions": [
      "sidePanel",
      "activeTab",
      "storage",
      "tabs"
    ],
    "host_permissions": [
      "<all_urls>"
    ],
    "icons": {
      "16": "icons/16.png",
      "32": "icons/32.png",
      "48": "icons/48.png",
      "64": "icons/64.png",
      "128": "icons/128.png"
    }
  }